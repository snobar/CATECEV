<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shabik</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/_layout.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <style>
        /* Set the height for the select element itself */
        .searchable-select {
            height: 40px; /* Set the desired height for the input */
            line-height: 40px; /* Vertically align the text */
        }
        /* Target the Select2 container to apply height */
        .select2-container--default .select2-selection--single {
            height: 40px !important; /* Match the height of the input */
            line-height: 40px !important; /* Vertically center the text */
        }

            /* Adjust the arrow in the Select2 box */
            .select2-container--default .select2-selection--single .select2-selection__arrow {
                height: 40px !important; /* Ensure arrow height matches */
                top: 0 !important; /* Align the arrow with the top of the input */
            }

            /* Center the text inside the select box */
            .select2-container--default .select2-selection--single .select2-selection__rendered {
                line-height: 40px !important; /* Align the text inside */
            }

        /* Adjust the height of each option in the dropdown list */
        .select2-results__option {
            height: 40px !important; /* Match the height of each option */
        }

        /* Adjust the dropdown list itself */
        .select2-container--default .select2-dropdown {
            max-height: 200px !important; /* Optional: Set a max height for the dropdown */
            overflow-y: auto !important; /* Make dropdown scrollable if there are too many options */
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo with Text -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Shabik Logo" style="width: 100px; height: auto; margin-right: 10px;" />
                    Shabik
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
          @*       <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div> *@
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="container border p-2">
                @RenderBody()
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
